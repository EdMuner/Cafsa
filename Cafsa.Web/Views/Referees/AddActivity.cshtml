@model Cafsa.Web.Models.ActivityViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Activity</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddActivity">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="RefereeId" />

            <partial name="_Activity" />

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Details" asp-route-id="@Model.RefereeId" class="btn btn-success">Back to Referee</a>
            </div>
        </form>
    </div>
</div>
